<div class="container">
  <div class="row first-view-container">
    <div class="span6">
      <h1 class="main-logo">DULE</h1>
    </div>
    <div class="span6 registration-form-container">
      <%= form_for @user, url: registrations_path, html: { class: 'form-horizontal' } do |f| %>
        <div class="control-group">
          <%= f.label :username, '아이디', class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :username, placeholder: '아이디' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password, '비밀번호', class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, placeholder: '비밀번호' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password_confirmation, '비밀번호 확인', class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password_confirmation, placeholder: '비밀번호 확인' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :department, '학과', class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :department, placeholder: '학과' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :nickname, '이름', class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :nickname, placeholder: '이름' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit '가입하기', class: 'btn btn-warning' %>
            <%= link_to '뒤로', new_user_session_path, class: 'btn' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
