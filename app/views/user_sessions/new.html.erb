<div class="container">
  <div class="row first-view-container">
    <div class="span6">
      <h1 class="main-logo">DULE</h1>
    </div>
    <div class="span6 login-form-container">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
        <div class="control-group">
          <%= f.label :username, '아이디', class: 'control-label' %>
          <div class="controls">
           <%= f.text_field :username, placeholder: '아이디' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :password, '비밀번호', class: 'control-label' %>
          <div class="controls">
           <%= f.password_field :password, placeholder: '비밀번호' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn">로그인</button>
            <%= link_to '가입하기', new_registration_path, class: 'btn' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
